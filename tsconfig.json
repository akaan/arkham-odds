{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "es7"
    ],
    "baseUrl": "./src",
    "paths": {
      "arkham-odds": ["."]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
