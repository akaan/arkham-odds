{
  "name": "arkham-odds",
  "version": "0.3.0",
  "description": "Javascript library for computing odds of outcome in Arkham Horror : The Card Game",
  "main": "arkham-odds.js",
  "author": "Akaan Qualrus <akaan.qualrus@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/akaan/arkham-odds.git"
  },
  "scripts": {
    "precommit": "npm run all && git add ./docs",
    "all": "npm-run-all lint dist doc:*",
    "dist": "npm run clean:dist && rollup --config",
    "clean": "npm-run-all clean:*",
    "clean:compile": "rm -Rf ./.out",
    "clean:dist": "rm -Rf ./dist",
    "clean:doc": "rm -Rf ./docs/*",
    "compile": "npm run clean:compile && tsc",
    "doc": "npm run clean:doc && npm-run-all doc:*",
    "doc:generate": "typedoc",
    "doc:add-theme": "printf 'theme: jekyll-theme-cayman' > ./docs/_config.yml",
    "lint": "tslint -c tslint.json \"src/**/*.ts\"",
    "lint:fix": "tslint --fix -c tslint.json \"src/**/*.ts\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "husky": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^0.67.4",
    "rollup-plugin-typescript2": "^0.18.0",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {}
}
