{
  "name": "arkham-odds",
  "version": "0.2.0",
  "description": "Javascript library for computing odds of outcome in Arkham Horror : The Card Game",
  "main": "arkham-odds.js",
  "author": "Akaan Qualrus <akaan.qualrus@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/akaan/arkham-odds.git"
  },
  "scripts": {
    "build": "npm run clean && npm run lint && rollup --config && npm run doc",
    "clean": "rm -Rf ./dist && rm -Rf ./docs && rm -Rf ./.out && rm -Rf ./.rpt2_cache",
    "compile": "tsc",
    "doc": "typedoc --options ./typedocconfig.js",
    "lint": "tslint -c tslint.json \"src/**/*.ts\"",
    "lint:fix": "tslint --fix -c tslint.json \"src/**/*.ts\""
  },
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "rollup": "^0.67.4",
    "rollup-plugin-typescript2": "^0.18.0",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {}
}
